{
  "dashboard": {
    "title": "FiatRails Production Overview",
    "description": "Core metrics for FiatRails production trial",
    "tags": ["fiatrails", "production"],
    "timezone": "utc",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "RPC Error Rate (5m)",
        "targets": [
          {
            "expr": "rate(fiatrails_rpc_errors_total[5m]) / rate(fiatrails_rpc_requests_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "RPC p95 Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fiatrails_rpc_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "DLQ Depth",
        "targets": [
          {
            "expr": "fiatrails_dlq_depth",
            "legendFormat": "Items"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Successful Mints (5m rate)",
        "targets": [
          {
            "expr": "rate(fiatrails_mint_intents_total{status=\"executed\"}[5m])",
            "legendFormat": "Mints/s"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "graph",
        "title": "RPC Request Rate by Method",
        "targets": [
          {
            "expr": "rate(fiatrails_rpc_requests_total[1m])",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "type": "graph",
        "title": "API Latency Percentiles",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(fiatrails_http_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(fiatrails_http_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(fiatrails_http_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      }
    ]
  }
}

